@import "mixins"

main-color = #333

@keyframes enter
    from
        right -200px
        opacity 0
    to
        right
        opacity 1

@keyframes enter-bottom
    from
        top 200px
        opacity 0
    to
        top 0
        opacity 1

@keyframes fade-in
    from
        opacity 0
    to
        opacity 1


html, body
    margin 0
    padding 0
    font 18px/1.5 Helvetica Neue, Arial, sans-serif
    color main-color
    background #fafafa

a
    text-decoration none
    color #2980b9
    &:hover
        color #3498db

p
    margin 0
    margin-bottom 10px

    &.error 
        margin-top 10px
        color #c0392b
        animation fade-in 350ms ease
        animation-fill-mode backwards

        &.hidden
            transition opacity 350ms ease
            opacity 0


input
    font inherit
    color inherit
    width 100%
    display block
    box-sizing border-box
    padding 5px 10px
    -webkit-appearance none
    border 1px solid lighten(main-color, 80%)
    background #fff
    color lighten(main-color, 20%)

    &:focus
        border 1px solid #3498db
        outline none

    &[disabled]
        opacity 0.5

section.intro
    margin-bottom 30px

h1
    margin 0
    margin-bottom 5px
    font-size 20px

p.introText
    margin 0
    color: lighten(main-color, 50%)

.content
    width 400px
    margin 0 auto
    padding-top 50px
    padding-bottom 30px

.chatBlock
    position relative

    &:not(.hidden)
        animation enter 700ms ease
        animation-delay 200ms
        animation-fill-mode backwards

    &.hidden
        opacity 0
        display none

    .messageForm
        &:after 
            display block
            content ''
            clear both
            width 0
            height 0

        .indicator
            margin-top 10px
            color lighten(main-color, 50%)
            float right

            &.bad
                color #c0392b

    .messageList
        padding 0
        margin 0
        display block
        width 100%
        height 600px
        overflow hidden
        overflow-y scroll
        margin-bottom 30px
        //background #ccc

        .message, .info
            display block
            margin 0
            margin-bottom 20px
            padding 0
            width 100%
            clear both

            position relative
            animation enter 400ms ease
            animation-fill-mode backwards

        .info 
            color lighten(main-color, 50%)

        .message

            div
                box-sizing border-box
                float right
                word-wrap break-word

            .nickname
                width 35%
                padding 10px 15px
                color lighten(main-color, 50%)

            .text
                width 65%
                padding 10px 24px
                min-height 48px
                color #fafafa
                border-radius 24px
                position relative

                .tip
                    border-top 10px solid transparent !important
                    border-bottom 10px solid transparent !important
                    border-left 15px solid
                    position absolute
                    right -12px
                    top 14px

            &.external
                .nickname
                    text-align right
                    padding-right 25px

                .tip
                    border-left none
                    border-right 15px solid
                    right auto
                    left -12px

            &.internal
                .nickname
                    padding-left 25px

            &:after
                content ''
                display block
                width 0
                height 0
                clear both

.welcomeBlock
    margin-top 200px
    position relative
    animation enter 500ms ease
    animation-delay 600ms
    animation-fill-mode backwards

    p:first-child
        font-weight bold
        margin-bottom 5px

    &.hidden
        top 200px
        opacity 0
        transition all 500ms cubic-bezier(0.715, 0.005, 0.790, 0.085);
